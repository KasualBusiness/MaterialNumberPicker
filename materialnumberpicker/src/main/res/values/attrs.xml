<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaterialNumberPicker">
        <attr name="npMinValue" format="integer" />
        <attr name="npMaxValue" format="integer" />
        <attr name="npDefaultValue" format="integer" />
        <attr name="npTextSize" format="dimension" />
        <attr name="npTextColor" format="color" />
        <attr name="npTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="npSeparatorColor" format="color" />
        <attr name="npBackgroundColor" format="color" />
        <attr name="npFocusValue" format="boolean" />
        <attr name="npWrapValue" format="boolean" />
    </declare-styleable>

</resources>
